<div class="nested-form-wrapper form-inline" data-new-record="<%= f.object.new_record? %>">
  <div class="card p-2" style="width: 18rem;">
    <div class="form-group mb-2">
      <%= f.label :price %>
      <%= f.number_field :price, min: 1, step: 0.5, class: 'form-control' %>
    </div>

    <div class="form-group mb-2">
      <%= f.label :quantity %>
      <%= f.number_field :quantity, min: 1, class: "form-control" %>
    </div>
      <button type="button" data-action="nested-form#remove" class="btn btn-danger">Remove todo</button>
      <%= f.hidden_field :_destroy %>
  </div>
</div>
