<div>
  <%= form_with model: expense,
                id:'expense_form', data: {
      form_target: 'dropdownContent',
    }, class: invisible(expense) do |f| %>

    <div class="mb-3">
      <%= f.label :gastos, class: form_label %>
      <%= f.number_field :payments, min: 0, step: 0.5, class: form_control %>
    </div>

    <div class="mb-3">
      <%= f.label :detalle, class: form_label %>
      <%= f.text_field :details, class: form_control %>
    </div>

    <%= f.submit class: blue_btn %>
  <% end %>
</div>