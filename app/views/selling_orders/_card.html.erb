<div class="nested-form-wrapper d-inline-block" data-new-record="<%= f.object.new_record? %>">
  <div class="card px-2" style="width: 18rem;">
    <div class="d-flex">
      <div class="form-group row align-items-center justify-content-center">
        <%= f.label 'price S/.', class: 'col-sm-5 col-form-label p-0' %>
        <div class="col-sm-6">
          <%= f.text_field :price, class: 'form-control-plaintext' %>
        </div>
      </div>

      <div class="form-group row align-items-center justify-content-center">
        <%= f.label :quantity, class: 'col-sm-5 col-form-label p-0' %>
        <div class="col-sm-5">
          <%= f.text_field :quantity, class: "form-control-plaintext" %>
        </div>
      </div>
    </div>
  </div>
</div>