<div class="card__container p-2">
  <%= link_to customer_path(customer.id), class: 'text-decoration-none' do %>
    <div class="card m-1" >
      <div class="card-body">
        <p class="card-title">
          <strong>
          <%= customer.name %>
          </strong>
        </p>
        <p class="card-text"><%= customer.phone %></p>
        <% customer.unpaid_products.each do |product_name| %>
          <span class="badge"><%= product_name %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
