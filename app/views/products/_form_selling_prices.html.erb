<%= form_with model: inventory_purchase, data: { controller: 'nested-form', nested_form_wrapper_selector_value: '.nested-form-wrapper' } do |f| %>
  <template data-nested-form-target="template">
    <%= f.fields_for :selling_prices, SellingPrice.new, child_index: 'NEW_RECORD' do |selling_fields| %>
      <%= render "selling_prices/form", f: selling_fields, f_parent: f %>
    <% end %>

  </template>

  <%= f.fields_for :selling_prices do |selling_fields| %>
    <%= render "selling_prices/card", f: selling_fields %>
  <% end %>

  <!-- Inserted elements will be injected before that target. -->
  <div data-nested-form-target="target"></div>

  <% if inventory_purchase.stock? %>
    <button type="button" data-action="nested-form#add" class="btn btn-primary">Add Sale</button>
  <% end %>
<% end %>