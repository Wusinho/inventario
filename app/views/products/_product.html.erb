<div class="card__container p-2">
  <div class="<%= faulty_prod_card(product) %> p-2" id="<%= dom_id product %>" >
    <div class="card-body p-1">
      <h5 class="card-title"><%= link_to product.name, product_path(product.id), class: "link-dark text-decoration-none" %></h5>
    </div>
    <div class="card-body p-1">
      <p class="card-text"><%= product.description %></p>
      <%= product_form(product) %>
      <div class="image-wrapper">
        <%= render_image(product) %>
      </div>
    </div>
    <div class="card-body p-1 mt-1 d-flex flex-wrap justify-content-center">
      <% product.categories.each do |category| %>
        <span class="badge p-2"><%= category.name %></span>
      <% end %>
    </div>
  </div>
</div>