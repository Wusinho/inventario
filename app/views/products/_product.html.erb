  <div class="<%= faulty_prod_card(product) %>" id="<%= dom_id product %>" >
    <div class="card-body">
      <h5 class="card-title"><%= link_to product.name, product_path(product.id), class: "link-dark text-decoration-none" %></h5>
    </div>
      <div class="card-body">
        <p class="card-text"><%= product.description %></p>
        <%= product_form(product) %>
        <div class="image-wrapper">
          <%= render_image(product) %>
        </div>
        <% product.categories.each do |category| %>
          <span class="badge rounded-pill bg-info text-dark"><%= category.name %></span>
        <% end %>
      </div>
  </div>
